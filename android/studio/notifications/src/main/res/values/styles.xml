<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="notification_imagebutton_scale">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="custom_btn_style" parent="@style/notification_imagebutton_scale">
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
    </style>

    <style name="notification_linear_scale">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="notification_textview_title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="notification_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
